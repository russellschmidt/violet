.container
  %h1.col-sm-12
    .row
      =@sponsored_post.title
  .row
    .col-md-8
      %p
        =@sponsored_post.body
      %p
        Very Nice Price: $#{@sponsored_post.price}
    .col-md-4
      =link_to "Edit Ad", edit_topic_sponsored_post_path(@sponsored_post.topic, @sponsored_post), class: "btn btn-success"
      =link_to "Delete Ad", [@sponsored_post.topic, @sponsored_post], method: :delete, class: "btn btn-danger", data: {confirm: "R U Sure? Delete is forever"}
